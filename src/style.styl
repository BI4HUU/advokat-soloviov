// ------------  ВИДЫ УСЛУГ  ------

.services
	display flex
	flex-wrap wrap
	padding-top 20px
	padding-bottom 20px

.services *
	text-align center
	
.services a
	display inline-block
	box-sizing: border-box
	text-decoration none
	color #3d449a
	font-weight bold
	padding 8px
	margin 2px
	width 100%

.services [href="#"], .contact-section [href="#"]
	color #222
	cursor default

.services_head
	min-width 100%
	width 100%
	text-align center
	margin-bottom 20px

.services_icon
	display inline-block
	transition all 0.8s
	padding 10px 60px

.services_icon_wrap
	display inline-block
	min-width 100%
	padding 0 12px

.services_icon_wrap:hover .services_icon
	transform rotateY(360deg)

.services_icon_wrap:hover svg
	fill #3d449a

.services_icon svg 
	fill #9dabb8
	height 50px

.h1
	display inline-block
	text-align center
	position relative
	padding 20px 30px 20px 30px
	margin 10px auto
	text-transform uppercase
	font-size 28px
	line-height 28px
	font-weight 600

.h2
	display inline-block
	text-align center
	position relative
	padding 20px 30px 20px 30px
	margin 10px auto
	text-transform uppercase
	font-size 26px
	line-height 26px
	font-weight 700

.h2:before
	content ''
	display block
	margin: auto
	position absolute
	bottom 0
	left 50%
	transform: translateX(-50%)
	width 140px
	border-bottom 1px solid #888


