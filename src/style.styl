html
	background-color #fbfbfb
	overflow-x: hidden
	

body
	position relative
	z-index 3
	overflow-x: hidden
	font-family Raleway, sans-serif

.container 
	width: 100%
	padding-right: 15px
	padding-left: 15px
	margin-right: auto
	margin-left: auto
	box-sizing: border-box
	position relative

section
	position relative

@media (min-width: 576px) 
	.container 
		max-width: 540px
	
@media (min-width: 768px) 
	.container 
		max-width: 720px
	
@media (min-width: 992px) 
	.container 
		max-width: 960px
	
@media (min-width: 1200px) 
	.container 
		max-width: 1140px

.col
	display flex
	flex-direction column 
	-ms-flex-preferred-size 0
	flex-basis 0
	-webkit-box-flex 1
	-ms-flex-positive 1
	flex-grow 1
	max-width 100%

.col-left
	margin-right: 15px

.col-right
	margin-right 15px


#services, #about, #reviews, #call, #contact
	position absolute
	top -36px
	z-index -8

p
	line-height: 1.4
	font-size: 16px
	letter-spacing 0.3px

li
	line-height: 1.65
	font-size: 16px
	letter-spacing 0.3px

// --------------  header  ------------

header
	display block
	position fixed
	top 0
	left 0
	right 0
	width 100%
	width 100vw
	box-shadow: 0 3px 3px rgba(0,0,0,.05)
	z-index 4
	margin-bottom 3px

.header-container
	display flex
	justify-content space-between
	box-sizing border-box
	height 70px

.logo
	display block
	height 40px
	padding 15px 0

nav
	display flex
	flex-wrap nowrap
	margin-block-start 0
	margin-block-end 0
	margin-inline-start 0px
	margin-inline-end 0px
	padding-inline-start 0
	height 100%

.menu-item
	display inline-block
	text-decoration none
	line-height 100%
	line-height 70px
	color #222
	padding-left 10px
	font-weight 500
	font-weight bold

.menu-item-akcent
	color #3d449a
	


.burger
	display inline-block
	line-height 100%
	line-height 70px
	height 70px
	padding-top 24px
	padding-bottom 24px
	padding-left 15px
	padding-right 15px
	margin-right -15px
	box-sizing border-box


.menu-open .burger
	display none

.burger_line
	height 2px
	width 16px
	background-color #223

.burger_line-2
	margin-top 5px
	margin-bottom 5px

.fon-menu
	display none
	
@media (max-width: 768px) 
	
	.header-container
		height 50px

	.logo
		height 30px
		padding 10px 0

	.burger
		line-height 100%
		line-height 50px
		height 50px
		padding-top 17px
		padding-bottom 17px

	.menu-item
		display none

	.menu-open nav
		flex-direction column
		position absolute
		z-index 6
		right 0
		height 100%
		height 100vh
		padding 20px 60px 10px 35px
		background-color rgba(244,244,244, 0.9)
		backdrop-filter: blur(3px)

	.menu-open .menu-item
		display inline-block
		line-height 50px

	.menu-open .fon-menu
		display block
		position absolute
		z-index 5
		top 0
		right 0
		height 160%
		height 110vh
		width 160%
		width 150vh
		background-color rgba(3,3,3, 0.2)
		backdrop-filter: blur(1px)
	
@media (min-width: 768px) 
	.burger
		display none


